<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:background="@color/color_f0f2f4"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mine_fecruitment_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_545859"
            android:layout_marginTop="@dimen/y32"
            android:layout_marginLeft="@dimen/x30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mine_fecruitment_state_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_fd7b25"
            android:layout_marginRight="@dimen/x30"
            app:layout_constraintTop_toTopOf="@+id/mine_fecruitment_time_textview"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/color_f0f2f4"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginBottom="@dimen/y30"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mine_fecruitment_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_33353a"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mine_fecruitment_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_33353a"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/x30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mine_fecruitment_title_textview"/>

        <com.art.recruitment.artperformance.view.TagCloudView
            android:id="@+id/details_flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_fecruitment_title_textview"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y24"
        android:background="@color/color_f0f2f4"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24">

        <ImageView
            android:id="@+id/mine_sign_time_imageview"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/icon_a_time"
            android:layout_marginLeft="@dimen/x30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mine_sign_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_9aa0a2"
            android:layout_marginLeft="@dimen/x14"
            app:layout_constraintLeft_toRightOf="@+id/mine_sign_time_imageview"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16">

        <ImageView
            android:id="@+id/mine_sign_adress_imageview"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/icon_a_adress"
            android:layout_marginLeft="@dimen/x30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mine_sign_adress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_9aa0a2"
            android:layout_marginLeft="@dimen/x14"
            app:layout_constraintLeft_toRightOf="@+id/mine_sign_adress_imageview"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y34"
        android:paddingBottom="@dimen/y30">

        <TextView
            android:id="@+id/mine_next_frame_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_next_frame"
            android:textSize="13sp"
            android:textColor="@color/color_fd7b25"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/y22"
            android:paddingBottom="@dimen/y22"
            android:background="@drawable/shape_mine_sign_up_message_background"/>

        <TextView
            android:id="@+id/mine_editorial_recruitment_information_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_editorial_recruitment_information"
            android:textSize="13sp"
            android:textColor="@color/color_ffffff"
            android:paddingTop="@dimen/y22"
            android:paddingBottom="@dimen/y22"
            android:paddingRight="@dimen/x54"
            android:paddingLeft="@dimen/x54"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/shape_mine_fecruitment_information_background"
            android:layout_marginRight="@dimen/x40"
            app:layout_constraintLeft_toRightOf="@+id/mine_next_frame_textview"/>

        <TextView
            android:id="@+id/mine_fecruitment_personnel_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_personnel_recruitment"
            android:textSize="13sp"
            android:textColor="@color/color_ffffff"
            android:paddingTop="@dimen/y22"
            android:paddingBottom="@dimen/y22"
            android:paddingRight="@dimen/x80"
            android:paddingLeft="@dimen/x80"
            android:background="@drawable/shape_mine_personnel_recruitment_background"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            app:layout_constraintLeft_toRightOf="@+id/mine_editorial_recruitment_information_textview"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
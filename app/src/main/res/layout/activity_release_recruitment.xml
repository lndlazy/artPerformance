<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f2f4"
    tools:context=".ui.group.activity.ReleaseRecruitmentActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/release_title_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="@dimen/y28">

        <ImageView
            android:id="@+id/release_return_imageview"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/nav_arrow"
            android:layout_marginTop="@dimen/y64"
            android:layout_marginLeft="@dimen/x30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/release_recruitment"
            android:textSize="18sp"
            android:textColor="@color/color_33353a"
            app:layout_constraintRight_toLeftOf="@+id/release_head_portrait_imageview"
            app:layout_constraintLeft_toRightOf="@+id/release_return_imageview"
            app:layout_constraintTop_toTopOf="@+id/release_return_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/release_return_imageview"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/release_head_portrait_imageview"
            android:layout_width="@dimen/x58"
            android:layout_height="@dimen/y58"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/y16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_ffffff"
        app:layout_constraintBottom_toTopOf="@+id/release_confirm_publication_textview"
        app:layout_constraintTop_toBottomOf="@+id/release_title_constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y40"
                android:paddingTop="@dimen/y38"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_title"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"/>

                <TextView
                    android:id="@+id/release_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_title"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_title"/>/>

                <EditText
                    android:id="@+id/release_title_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:background="@null"
                    android:hint="@string/release_title_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:layout_marginLeft="@dimen/x142"
                    android:maxLength="20"
                    android:layout_marginRight="@dimen/x15"
                    android:theme="@style/TextInputLayoutLineColor"
                    app:layout_constraintRight_toLeftOf="@+id/release_title_number_textviewv"
                    app:layout_constraintLeft_toRightOf="@+id/release_title_textview"/>

                <TextView
                    android:id="@+id/release_title_number_textviewv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="right"
                    android:text="0/20"
                    android:textSize="12sp"
                    android:textColor="@color/color_b7bcbe"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/release_title_edittext"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y24"
                android:paddingTop="@dimen/y12"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_label_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_label"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/x10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <com.art.recruitment.artperformance.view.Flowlayout
                    android:id="@+id/release_label_flowlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x142"
                    app:layout_constraintLeft_toRightOf="@+id/release_label_textview"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y40"
                android:paddingTop="@dimen/y38"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_number"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"/>

                <TextView
                    android:id="@+id/release_number_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_number"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_number"/>

                <EditText
                    android:id="@+id/release_number_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/release_work_number_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/x142"
                    android:theme="@style/TextInputLayoutLineColor"
                    app:layout_constraintLeft_toRightOf="@+id/release_number_textView"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y24"
                android:paddingTop="@dimen/y26"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_wages"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/release_wages_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_wages"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_wages"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <EditText
                    android:id="@+id/release_wages_edittext"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y56"
                    android:background="@drawable/dialog_release_recruitment_face_unenable"
                    android:gravity="center"
                    android:hint="@string/release_wages_hint"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:theme="@style/TextInputLayoutLineColor"
                    android:layout_marginLeft="@dimen/x142"
                    android:layout_marginRight="@dimen/x20"
                    app:layout_constraintRight_toLeftOf="@+id/release_face_textview"
                    app:layout_constraintLeft_toRightOf="@+id/release_wages_textview"/>

                <CheckBox
                    android:id="@+id/release_face_textview"
                    android:layout_width="@dimen/x124"
                    android:layout_height="@dimen/y56"
                    android:text="@string/release_face_to_face_hint"
                    android:textSize="13sp"
                    android:textColor="@drawable/release_face_text_bg"
                    android:gravity="center"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/release_face_bg"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y40"
                android:paddingTop="@dimen/y38"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_work_time"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"/>

                <TextView
                    android:id="@+id/release_work_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_working_hours"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_work_time"/>

                <EditText
                    android:id="@+id/release_work_time_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/release_work_time_hint"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:theme="@style/TextInputLayoutLineColor"
                    android:layout_marginLeft="@dimen/x86"
                    app:layout_constraintLeft_toRightOf="@+id/release_work_time_textview"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y18"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_time"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/release_selection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_set_time"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_time"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/release_selection_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_selection_time_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_b7bcbe"
                    android:layout_marginLeft="@dimen/x86"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/release_selection_time"/>

                <ImageView
                    android:id="@+id/release_gather_time_imageview"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:paddingLeft="@dimen/x40"
                    android:src="@mipmap/icon_release_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/y20"
                android:paddingBottom="@dimen/y40"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_detailed_location"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"
                    android:layout_marginTop="@dimen/y20"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/release_detailed_location_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_collection_place"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/y20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/release_detailed_location"/>

                <TextView
                    android:id="@+id/release_detailed_city_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_selection_city_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_b7bcbe"
                    android:layout_marginLeft="@dimen/x86"
                    android:layout_marginTop="@dimen/y20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/release_detailed_location_textview"/>

                <ImageView
                    android:id="@+id/release_detailed_city_imageview"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:src="@mipmap/icon_release_arrow"
                    android:paddingLeft="@dimen/x40"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:id="@+id/release_detailed_city_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:background="@color/color_f0f2f4"
                    android:layout_marginTop="@dimen/y38"
                    app:layout_constraintTop_toBottomOf="@+id/release_detailed_city_textview" />

                <EditText
                    android:id="@+id/release_detailed_location_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/release_detailed_location_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:layout_marginLeft="@dimen/x86"
                    android:layout_marginTop="@dimen/y40"
                    android:theme="@style/TextInputLayoutLineColor"
                    app:layout_constraintTop_toBottomOf="@+id/release_detailed_city_view"
                    app:layout_constraintLeft_toRightOf="@+id/release_detailed_location_textview"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y18"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_deadline_for_Registration"
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_f84045"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/release_deadline_for_Registration_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_deadline_for_Registration"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/release_deadline_for_Registration"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/release_deadline_for_registration_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_selection_time_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_b7bcbe"
                    android:layout_marginLeft="@dimen/x30"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/release_deadline_for_Registration_textview"/>

                <ImageView
                    android:id="@+id/release_sing_up_time_imageview"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:src="@mipmap/icon_release_arrow"
                    android:paddingLeft="@dimen/x40"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>


            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y240"
                android:paddingBottom="@dimen/y40"
                android:paddingTop="@dimen/y38"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:id="@+id/release_other_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_other_requirements"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/x10"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <EditText
                    android:id="@+id/release_other_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:background="@null"
                    android:hint="@string/release_other_requirements_hint"
                    android:textSize="14sp"
                    android:textColor="@color/color_33353a"
                    android:textColorHint="@color/color_b7bcbe"
                    android:maxLength="200"
                    android:layout_marginLeft="@dimen/x84"
                    android:layout_marginRight="@dimen/x15"
                    android:theme="@style/TextInputLayoutLineColor"
                    app:layout_constraintRight_toLeftOf="@+id/release_other_number_textviewv"
                    app:layout_constraintLeft_toRightOf="@+id/release_other_textview"/>

                <TextView
                    android:id="@+id/release_other_number_textviewv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:text="0/200"
                    android:textSize="12sp"
                    android:textColor="@color/color_b7bcbe"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:layout_weight="1"
                android:paddingLeft="@dimen/x30"
                android:background="@color/color_f1f2f4"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/release_confirm_publication_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:text="@string/release_confirm_publication"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/release_selector_button_nomal_fd7b25_unenable_febd92"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>